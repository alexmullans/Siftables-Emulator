<UserControl xmlns:Sift="clr-namespace:Siftables" 
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit" xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"  x:Class="Siftables.MainWindow"
    mc:Ignorable="d"
    d:DesignHeight="600" d:DesignWidth="800">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <sdk:Label x:Name="title" Margin="5" Foreground="SkyBlue" FontSize="24" Content="Siftables Emulator"/>
        <Border x:Name="workspaceBorder" BorderBrush="Black" BorderThickness="3" Margin="5" Grid.Row="1">
            <Canvas Background="SkyBlue" Margin="0" x:Name="workspace" >
            </Canvas>
        </Border>
        <Grid x:Name="controlsGrid" Background="Gray" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
        	<Button x:Name="snapToGridButton" Margin="10" Grid.Column="0" Click="snapToGridButton_Click">
        		<sdk:Label Content="Snap To Grid"/>

        	</Button>
            <Button x:Name="loadAProgramButton" Margin="10" Grid.Column="1" Click="loadAProgramButton_Click">
                <sdk:Label Content="Load A Program"/>
            </Button>
            <Button x:Name="reloadThisProgramButton" Margin="10" Grid.Column="2" IsEnabled="False">

                <sdk:Label Content="Reload This Program"/>
            </Button>
            <Slider x:Name="zoomSlider" Margin="10" Grid.Column="3" VerticalAlignment="Top" />
            <sdk:Label Grid.Column="3" Margin="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" Foreground="White" Content="Zoom"/>
            <toolkit:NumericUpDown Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="numberOfCubesUpDown" IsEnabled="True" Maximum="9" Minimum="1" DataContext="{Binding}" />
            <!--<sdk:Label Grid.Column="4" Margin="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" Foreground="White"># of Cubes</sdk:Label>-->

        </Grid>
    </Grid>
</UserControl>
