<UserControl x:Class="Siftables.CubeSL"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignHeight="168" d:DesignWidth="168">

    <Grid x:Name="LayoutRoot">
        <Canvas Height="168" HorizontalAlignment="Left" Margin="0,0,0,0" Name="cube" VerticalAlignment="Top" Width="168">
            <Canvas.Background>
                <ImageBrush ImageSource="/Siftables;component/Images/cube.png" Stretch="Uniform" />
            </Canvas.Background>
            <Canvas Height="128" Width="128" Name="screen" Margin="20" Background="White">
                <Button Height="32" Name="button1" Width="32" BorderBrush="{x:Null}" AllowDrop="False" Canvas.Left="47" Canvas.Top="62">
                    <Button.Background>
                        <ImageBrush ImageSource="/Siftables;component/Images/flip.png" Stretch="UniformToFill" />
                    </Button.Background>
                </Button>
            </Canvas>
        </Canvas>
    </Grid>
</UserControl>
