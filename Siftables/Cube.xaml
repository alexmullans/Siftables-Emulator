<UserControl x:Class="Siftables.Cube"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="196" Width="196">

    <Grid x:Name="LayoutRoot">
        <Canvas Height="168" HorizontalAlignment="Center" Margin="0,0,0,0" Name="cube" VerticalAlignment="Center" Width="168">
            <Canvas.Background>
                <ImageBrush ImageSource="/Siftables;component/Images/cube.png" Stretch="Uniform" />
            </Canvas.Background>
            
            <!--Emulator Screen-->
            <Canvas Height="128" Width="128" Name="screen" Margin="20" Background="White"></Canvas>
        </Canvas>
        <!--Emulator Buttons-->
        <Button Height="32" Name="flipButton" Width="32" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource ImageButton}">
            <Button.Background>
                <ImageBrush ImageSource="/Siftables;component/Images/flip.png" Stretch="UniformToFill" />
            </Button.Background>
        </Button>
        <Button Height="32" Name="rotateCcwButton" Width="32" HorizontalAlignment="Left" VerticalAlignment="Bottom"  Style="{StaticResource ImageButton}">
            <Button.Background>
                <ImageBrush ImageSource="/Siftables;component/Images/rotate_ccw.png" Stretch="UniformToFill" />
            </Button.Background>
        </Button>
        <Button Height="32" Name="rotateCwButton" Width="32" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Style="{StaticResource ImageButton}">
            <Button.Background>
                <ImageBrush ImageSource="/Siftables;component/Images/rotate_cw.png" Stretch="UniformToFill" />
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
